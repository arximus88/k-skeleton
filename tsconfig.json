{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": true,
		"module": "es2020",
		"lib": ["es2020", "dom"],
		"target": "es2020",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"inlineSources": true,
		"types": ["svelte"]
	},
	"include": ["src/**/*.ts", "src/**/*.svelte", "src/service-worker.js"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}

